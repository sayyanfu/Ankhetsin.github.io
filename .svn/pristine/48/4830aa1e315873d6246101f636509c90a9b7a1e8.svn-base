<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg" >

    <TextView
        android:id="@+id/tv_bill_item_proName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="鱼香肉丝"
        android:maxLength="5"
        android:ellipsize="end"
        android:textColor="@color/black_02" />

    <TextView
        android:id="@+id/tv_bill_item_price"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="left"
        android:text="单价/份"
        android:textColor="@color/red"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/iv_bill_item_z"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_bill_item_price"
        android:scaleType="center" />

    <TextView
        android:id="@+id/tv_bill_item_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="份数"
        android:textColor="@color/black_02" />

</RelativeLayout>