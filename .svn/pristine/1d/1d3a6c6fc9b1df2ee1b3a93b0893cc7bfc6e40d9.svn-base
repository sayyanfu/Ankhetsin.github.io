<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg"
    android:orientation="horizontal"
    android:weightSum="7" >

    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_bill_item_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="right"
        android:text="份数"
        android:textColor="@color/black_02" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/bill_itemlinl01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tv_bill_item_cnt"
        android:layout_weight="2"
        android:gravity="center|left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_bill_item_price"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="true"
            android:text="单价/份"
            android:textColor="@color/red" />

        <ImageView
            android:id="@+id/iv_bill_item_z"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:scaleType="center"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_bill_item_proName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/bill_itemlinl01"
        android:layout_weight="3"
        android:ellipsize="end"
        android:text="鱼香肉丝"
        android:gravity="left"
        android:textColor="@color/black_02" />

</RelativeLayout>