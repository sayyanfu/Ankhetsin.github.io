<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent">
        <item name="android:textSize">14.0sp</item>
    </style>

    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title">
        <item name="android:textSize">18.0sp</item>
    </style>

    <style name="header_iv_back">
        <item name="android:scaleType">center</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:src">@drawable/selector_bg_header_back</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- <item name="android:background">@drawable/bg_layer_dialog</item> -->

    <!-- Activity主题 --> 
    <style name="activityTheme" parent="@android:style/Theme"> 
        <item name="android:windowIsTranslucent">true</item> 
    </style> 
	<style name="search_text_hotword">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/selector_tv_mark</item>
        <item name="android:textColor">@drawable/selector_color_remarks_items</item>
    </style>
    
</resources>