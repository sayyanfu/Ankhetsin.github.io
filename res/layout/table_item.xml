<?xml version="1.0" encoding="utf-8"?>
<com.fangbian365.kuaidi.ui.uisupport.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_table_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_bg_table_inuse"
    android:padding="3dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_table_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="01"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_table_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="1号桌"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_table_person_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="8/19"
            android:textSize="13sp" />
    </LinearLayout>

</com.fangbian365.kuaidi.ui.uisupport.SquareLayout>